<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

    <ImageView
        android:id="@+id/interview_user_profile_image_post"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/interview_usernme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/interview_user_profile_image_post"
        android:text="User Name"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/interview_user_institute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="institute"
        android:layout_below="@+id/interview_usernme"
        android:layout_toRightOf="@+id/interview_user_profile_image_post"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/interview_user_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="company"
        android:layout_below="@+id/interview_user_institute"
        android:layout_toRightOf="@+id/interview_user_profile_image_post"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/created_at_interview_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="created At"
        android:layout_below="@+id/interview_user_company"
        android:layout_toRightOf="@+id/interview_user_profile_image_post"
        android:textStyle="bold"
        android:gravity="end"
        android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/company_name_interview_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_below="@+id/created_at_interview_experience"
            android:text="COMPANY"/>

    <TextView
        android:id="@+id/interview_exp_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/company_name_interview_list"
        android:text="demo post"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>