<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/commented_user_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            />

        <TextView
            android:id="@+id/commented_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/commented_user_image"/>

        <TextView
            android:id="@+id/commented_user_institute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/commented_user_image"
            android:layout_below="@+id/commented_user_name"
            android:text="institute name"/>

        <TextView
            android:id="@+id/commented_user_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="company"
            android:layout_toRightOf="@+id/commented_user_image"
            android:layout_below="@+id/commented_user_institute"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/comment_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commented_user_image"
            android:layout_marginTop="5dp"
            android:text="demo comment"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="84dp"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>